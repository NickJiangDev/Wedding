/* 音乐控制按钮 */
.music-control {
  position: fixed;
  top: 30rpx;
  right: 30rpx;
  width: 60rpx;
  height: 60rpx;
  z-index: 999;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.8);
  display: flex;
  align-items: center;
  justify-content: center;
  animation: rotate 8s linear infinite;
  animation-play-state: paused;
}

.music-control.playing {
  animation-play-state: running;
}

.music-icon {
  width: 40rpx;
  height: 40rpx;
  opacity: 0.8;
  transition: opacity 0.3s ease;
}

.music-icon:active {
  opacity: 1;
}

@keyframes rotate {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

/* 欢迎页面 */
.welcome-section {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100vh;
  z-index: 100;
  opacity: 0;
  transition: all 0.8s ease-out;
}

.welcome-section.show {
  opacity: 1;
}

.welcome-section.fullscreen {
  height: 100vh;
}

.welcome-section.mini {
  height: 200rpx;
  z-index: 90;
}

.welcome-bg {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  transition: all 0.8s ease-out;
}

.welcome-content {
  position: relative;
  z-index: 2;
  text-align: center;
  padding-top: 30vh;
  color: #fff;
  text-shadow: 0 2px 4px rgba(0,0,0,0.3);
  transition: all 0.8s ease-out;
}

.mini .welcome-content {
  padding-top: 40rpx;
  transform: scale(0.6);
}

.welcome-title {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
  display: block;
}

.couple-names {
  font-size: 36rpx;
  margin-bottom: 20rpx;
  display: block;
}

.welcome-subtitle {
  font-size: 28rpx;
  opacity: 0.9;
  display: block;
}

.welcome-hint {
  margin-top: 60rpx;
  font-size: 24rpx;
  opacity: 0.8;
}

.arrow-down {
  width: 40rpx;
  height: 40rpx;
  margin: 20rpx auto;
  animation: bounce 1.5s infinite;
}

.location-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 10rpx;
  opacity: 0.8;
}

.info-item.location {
  display: flex;
  align-items: center;
  padding: 10rpx 0;
  cursor: pointer;
  transition: opacity 0.3s ease;
}

.info-item.location:active {
  opacity: 0.7;
}

@keyframes bounce {
  0%, 20%, 50%, 80%, 100% {
    transform: translateY(0) rotate(45deg);
  }
  40% {
    transform: translateY(-30rpx) rotate(45deg);
  }
  60% {
    transform: translateY(-15rpx) rotate(45deg);
  }
}

/* 故事容器 */
.story-container {
  width: 100%;
  height: 100vh;
  padding: 20rpx;
  box-sizing: border-box;
  padding-top: 220rpx;
  transition: all 0.5s ease-out;
  opacity: 1;
}

.story-container.hidden {
  opacity: 0;
  pointer-events: none;
  transform: translateY(30rpx);
}

/* 故事单元布局样式 */
.story-content-wrapper {
  display: flex;
  align-items: center;
  gap: 40rpx;
}

/* 左图右文布局 */
.layout-left-image .story-content-wrapper {
  flex-direction: row;
}

/* 右图左文布局 */
.layout-right-image .story-content-wrapper {
  flex-direction: row-reverse;
}

/* 上图下文布局 */
.layout-full-image {
  display: flex;
  flex-direction: column;
}

/* 上文下图布局 */
.layout-full-image-bottom {
  display: flex;
  flex-direction: column-reverse;
}

/* 文本内容样式 */
.text-content {
  flex: 1;
  padding: 20rpx;
}

/* 图片样式变体 */
.image-wrapper {
  width: 300rpx;
  height: 300rpx;
  flex-shrink: 0;
  position: relative;
  overflow: hidden;
  background: #f5f5f5;
  transition: all 0.3s ease;
}

.layout-full-image .image-wrapper,
.layout-full-image-bottom .image-wrapper {
  width: 100%;
  height: 400rpx;
  margin: 20rpx 0;
}

/* 菱形图片 */
.image-wrapper.diamond {
  clip-path: polygon(50% 0%, 100% 50%, 50% 100%, 0% 50%);
}

/* 圆形图片 */
.image-wrapper.circle {
  border-radius: 50%;
}

/* 多边形图片 */
.image-wrapper.polygon {
  clip-path: polygon(20% 0%, 80% 0%, 100% 20%, 100% 80%, 80% 100%, 20% 100%, 0% 80%, 0% 20%);
}

/* 六边形图片 */
.image-wrapper.hexagon {
  clip-path: polygon(25% 0%, 75% 0%, 100% 50%, 75% 100%, 25% 100%, 0% 50%);
}

/* 波浪形图片 */
.image-wrapper.wave {
  clip-path: path('M0,50 C25,0 75,100 100,50 L100,100 L0,100 Z');
}

/* 图片加载占位符 */
.image-wrapper:before {
  content: '图片加载中...';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  color: #999;
  font-size: 24rpx;
  z-index: 1;
}

/* 图片网格背景 */
.image-wrapper:after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(45deg, #f5f5f5 25%, transparent 25%, transparent 75%, #f5f5f5 75%, #f5f5f5),
              linear-gradient(45deg, #f5f5f5 25%, transparent 25%, transparent 75%, #f5f5f5 75%, #f5f5f5);
  background-size: 20rpx 20rpx;
  background-position: 0 0, 10rpx 10rpx;
  opacity: 0.1;
}

.story-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.3s ease;
  position: relative;
  z-index: 2;
}

/* 图片悬停效果 */
.image-wrapper:hover .story-image {
  transform: scale(1.05);
}

/* 标题样式 */
.title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
  text-align: center;
  letter-spacing: 2rpx;
  position: relative;
  padding-bottom: 20rpx;
}

.title:after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background: linear-gradient(to right, #ff9999, #ffcccc);
  border-radius: 2rpx;
}

/* 内容样式 */
.content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.8;
  margin: 20rpx 0;
  text-align: justify;
  letter-spacing: 1rpx;
}

/* 婚礼信息样式优化 */
.wedding-info {
  padding: 50rpx 40rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  margin: 40rpx 0;
  opacity: 0;
  transform: translateY(30rpx);
  transition: all 0.6s ease-out;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.wedding-info .title {
  font-size: 36rpx;
  margin-bottom: 30rpx;
  position: relative;
  padding-bottom: 20rpx;
}

.wedding-info .title:after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background: linear-gradient(to right, #ff9999, #ffcccc);
  border-radius: 2rpx;
}

.info-item {
  margin: 20rpx 0;
  font-size: 28rpx;
  color: #666;
  display: flex;
  align-items: center;
}

.label {
  color: #333;
  font-weight: 600;
  margin-right: 20rpx;
  min-width: 100rpx;
}

.location-map {
  width: 100%;
  height: 400rpx;
  margin-top: 30rpx;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

/* 结语部分 */
.ending-section {
  position: relative;
  width: 100%;
  height: 100vh;
  margin-top: 40rpx;
  opacity: 0;
  transform: translateY(30rpx);
  transition: all 0.6s ease-out;
}

.ending-section.show {
  opacity: 1;
  transform: translateY(0);
}

.ending-bg {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
}

.ending-content {
  position: relative;
  z-index: 2;
  text-align: center;
  padding-top: 40vh;
  color: #fff;
  text-shadow: 0 2px 4px rgba(0,0,0,0.3);
}

.ending-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  display: block;
}

.ending-text {
  font-size: 28rpx;
  line-height: 1.8;
  white-space: pre-line;
  display: block;
}

/* 重叠布局样式 */
.overlap-container {
  position: relative;
  width: 100%;
  min-height: 600rpx;
  margin: 60rpx 0;
  padding: 40rpx;
}

.layout-overlap-right .text-content {
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 60%;
  background: rgba(255, 255, 255, 0.95);
  padding: 60rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  border-radius: 20rpx;
  z-index: 2;
}

.layout-overlap-right .image-wrapper {
  position: absolute;
  right: 0;
  width: 65%;
  height: 100%;
  z-index: 1;
}

/* 对角线分割布局 */
.diagonal-container {
  position: relative;
  width: 100%;
  height: 800rpx;
  margin: 80rpx 0;
  overflow: hidden;
}

.diagonal-image {
  position: absolute;
  width: 100%;
  height: 100%;
  clip-path: polygon(0 0, 100% 0, 60% 100%, 0 100%);
}

.diagonal-content {
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 45%;
  padding: 60rpx;
  background: linear-gradient(135deg, rgba(255,255,255,0.95), rgba(255,255,255,0.98));
  border-radius: 20rpx;
  box-shadow: -8rpx 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

/* 全屏视差布局 */
.parallax-container {
  position: relative;
  width: 100%;
  height: 100vh;
  overflow: hidden;
}

.parallax-image {
  position: fixed;
  width: 100%;
  height: 120%;
  top: -10%;
}

.parallax-content {
  position: relative;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 2;
}

.parallax-content .content-wrapper {
  max-width: 80%;
  padding: 80rpx;
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(10px);
  border-radius: 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.15);
}

/* 文字样式变体 */
.text-elegant .title {
  font-family: "Times New Roman", serif;
  font-size: 48rpx;
  font-weight: 300;
  letter-spacing: 4rpx;
}

.text-minimal .title {
  font-size: 40rpx;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 6rpx;
}

.text-overlay .content {
  background: linear-gradient(to right, rgba(255,255,255,0.9), rgba(255,255,255,0.7));
  padding: 40rpx;
  backdrop-filter: blur(5px);
  border-radius: 15rpx;
}

/* 图片样式变体 */
.modern-square {
  clip-path: polygon(0 10%, 10% 0, 90% 0, 100% 10%, 100% 90%, 90% 100%, 10% 100%, 0 90%);
}

.parallax {
  transform: scale(1.1);
  transition: transform 0.5s ease-out;
}

.cinematic {
  filter: contrast(1.1) saturate(1.2);
}

.image-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(45deg, rgba(0,0,0,0.1), rgba(0,0,0,0));
  z-index: 1;
}

/* 动画效果 */
.story-unit {
  opacity: 0;
  transform: translateY(50rpx);
  transition: all 0.8s cubic-bezier(0.4, 0, 0.2, 1);
}

.story-unit.show {
  opacity: 1;
  transform: translateY(0);
}

/* 响应式调整 */
@media screen and (max-width: 768px) {
  .layout-overlap-right .text-content {
    width: 80%;
  }
  
  .diagonal-content {
    width: 60%;
  }
}

/* 高级装饰元素 */
.title:before {
  content: '';
  position: absolute;
  top: -20rpx;
  left: 0;
  width: 40rpx;
  height: 4rpx;
  background: currentColor;
  opacity: 0.3;
}

.content:after {
  content: '';
  display: block;
  width: 60rpx;
  height: 4rpx;
  background: linear-gradient(to right, currentColor, transparent);
  margin-top: 30rpx;
  opacity: 0.2;
} 