.container {
  padding: 0;
  min-height: 100vh;
  background-color: #fff;
}

/* 通用页面样式 */
.page {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 40rpx;
  box-sizing: border-box;
}

/* 封面页样式 */
.page-cover {
  position: relative;
  justify-content: flex-start;
  padding: 0;
  height: 100vh;
  overflow: hidden;
}

.cover-photo {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
}

.cover-content {
  position: relative;
  z-index: 2;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 0 40rpx;
  background: linear-gradient(to bottom, rgba(0,0,0,0.4) 0%, rgba(0,0,0,0.2) 50%, rgba(0,0,0,0) 100%);
  color: #fff;
}

.header-title {
  font-size: 56rpx;
  margin-bottom: 40rpx;
  letter-spacing: 2rpx;
  text-shadow: 0 2px 4px rgba(0,0,0,0.3);
}

.header-sub-title {
  font-size: 32rpx;
  margin-bottom: 20rpx;
  letter-spacing: 2rpx;
  text-shadow: 0 2px 4px rgba(0,0,0,0.3);
}

.wedding-title {
  font-size: 44rpx;
  margin-bottom: 20rpx;
  font-weight: normal;
  letter-spacing: 4rpx;
  text-shadow: 0 2px 4px rgba(0,0,0,0.3);
}

.wedding-date {
  font-size: 36rpx;
  margin-bottom: 60rpx;
  letter-spacing: 2rpx;
  text-shadow: 0 2px 4px rgba(0,0,0,0.3);
}

.wedding-date {
  font-size: 36rpx;
  color: #fff;
  margin-bottom: 60rpx;
  letter-spacing: 2rpx;
  text-shadow: 0 2px 4px rgba(0,0,0,0.3);
}

/* 邀请函页样式 */
.page-invitation {
  text-align: center;
  padding-top: 100rpx;
}

.invitation-header {
  font-size: 36rpx;
  margin-bottom: 60rpx;
  letter-spacing: 2rpx;
}

.invitation-content {
  font-size: 28rpx;
  line-height: 2.2;
  margin: 60rpx 0;
  white-space: pre-wrap;
  letter-spacing: 2rpx;
}

.invitation-footer {
  font-size: 32rpx;
  margin-top: 60rpx;
  letter-spacing: 2rpx;
}

.heart {
  color: #e60012;
  font-size: 28rpx;
}

/* 故事页样式 */
.page-story {
  text-align: center;
  padding-top: 100rpx;
}

.story-header {
  font-size: 32rpx;
  margin-bottom: 60rpx;
  letter-spacing: 2rpx;
}

.birth-info {
  display: flex;
  justify-content: space-between;
  width: 100%;
  margin: 60rpx 0;
  padding: 0 40rpx;
}

.moon-date {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.moon-date image {
  width: 280rpx;
  height: 280rpx;
  margin-bottom: 30rpx;
}

.moon-date text {
  font-size: 28rpx;
  letter-spacing: 2rpx;
}

.story-content {
  font-size: 28rpx;
  line-height: 2.2;
  margin-top: 60rpx;
  white-space: pre-wrap;
  letter-spacing: 2rpx;
}

/* 照片展示页样式 */
.photo-grid {
  width: 100%;
  padding: 0;
}

.photo-item {
  margin-bottom: 80rpx;
  text-align: center;
}

.photo-item image {
  width: 100%;
  height: 500rpx;
  object-fit: cover;
  border-radius: 24rpx;
  margin-bottom: 40rpx;
}

.photo-caption {
  font-size: 28rpx;
  line-height: 2;
  white-space: pre-wrap;
  letter-spacing: 2rpx;
}

.date {
  display: block;
  font-size: 32rpx;
  margin-bottom: 30rpx;
  letter-spacing: 2rpx;
}

.caption {
  font-size: 28rpx;
  line-height: 2;
  white-space: pre-wrap;
  letter-spacing: 2rpx;
}

.love-quote {
  font-size: 28rpx;
  line-height: 2.2;
  margin-top: 80rpx;
  text-align: center;
  white-space: pre-wrap;
  letter-spacing: 2rpx;
}

/* 结语页样式 */
.page-ending {
  text-align: center;
  padding-top: 100rpx;
}

.ending-title {
  font-size: 36rpx;
  margin-bottom: 60rpx;
  letter-spacing: 2rpx;
}

.ending-content {
  font-size: 28rpx;
  line-height: 2.2;
  margin: 60rpx 0;
  white-space: pre-wrap;
  letter-spacing: 2rpx;
}

.double-happiness {
  font-size: 160rpx;
  color: #e60012;
  margin: 80rpx 0;
  font-family: 'SimSun', serif;
}

/* 照片样式 */
.couple-photo {
  width: 100%;
  border-radius: 24rpx;
  box-shadow: 0 12rpx 24rpx rgba(0,0,0,0.08);
}

/* 动画延迟和持续时间优化 */
.animate-fade-in { animation-duration: 1s; }
.animate-fade-in:nth-child(2) { animation-delay: 0.3s; }
.animate-fade-in:nth-child(3) { animation-delay: 0.6s; }
.animate-fade-in:nth-child(4) { animation-delay: 0.9s; }

.animate-scale-in { animation-duration: 0.8s; }
.photo-item.animate-scale-in { animation-delay: 0.2s; }